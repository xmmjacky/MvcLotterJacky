@{
    ViewBag.Title = "奖品设置列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userPar = ViewBag.userInfoPar as MvcLotterModel.AwardsListEntity;
}
<link href="~/Static/searchbar/searchbar.css" rel="stylesheet" />
<div class="page-content">

    <div class="row">
        <div class="col-xs-12">
            <form id="searchForm" class="form-horizontal " role="form" action="@Url.Action("Index", "Awards")">
                <div class="form-group f-bb">
                    <div class="search-bar clearfix">
                        <div class="row f-fl clearfix f-mr20 f-mb20">
                            <label class="lb f-fl">奖品等级：</label>
                            <select class="form-control" id="Awards" name="Awards" style="width:120px;">
                                <option value="">==请选择==</option>
                                <option value="特等奖">特等奖</option>
                                <option value="一等奖">一等奖</option>
                                <option value="二等奖">二等奖</option>
                                <option value="三等奖">三等奖</option>
                                <option value="四等奖">四等奖</option>
                                <option value="五等奖">五等奖</option>
                                <option value="阳光普照奖">阳光普照奖</option>
                            </select>
                        </div>

                        <div class="row f-fl clearfix f-mr10 f-mb10">
                            &nbsp;
                            <button class="btn btn-sm  btn-primary"><i class="icon-zoom-in bigger-110"></i>查 询 </button>
                            <button class="btn btn-sm reset" type="reset"><i class="icon-undo bigger-110"></i>重置</button>
                        </div>

                    </div>

                </div>

            </form>
            <p>
                <button class="btn btn-sm btn-success" id="btn-add"><i class="icon-inbox bigger-125"></i>设置奖品等级</button>
            </p>
            <div class="table-responsive">
                <div class="dataTables_wrapper" role="grid">
                    <table id="sample-table-1" class="table table-striped  table-bordered table-hover">
                        <thead>
                            <tr role="row">
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">奖品等级</th>
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">奖品数量</th>
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">可使用数量</th>
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">物品</th>
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">创建时间</th>
                                <th role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1">操作</th>
                            </tr>
                        </thead>
                        <tbody role="alert" aria-live="polite" aria-relevant="all" class="table-tr-click">
                            @if (Model.DataList.Count <= 0)
                            {
                                <tr id="odd" class="odd">
                                    <td colspan="15" style="color: red; text-align: center;">暂无奖品信息</td>
                                </tr>
                            }
                            @foreach (MvcLotterModel.AwardsListEntity item in Model.DataList)
                            {
                                <tr>
                                    <td>
                                        @item.Awards
                                    </td>
                                    <td>
                                        @item.AwardsNum
                                    </td>
                                    <td>
                                        @item.UsedNum
                                    </td>
                                    <td>
                                        @item.AwardsGoods
                                    </td>
                                    <td>
                                        @item.CreateTime
                                    </td>
                                    <td>
                                        <button class="btn btn-xs btn-danger open-event redirectionOrder sign" userno="@item.ID" title="删除">
                                            <i class="icon-remove bigger-120"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                @Html.Raw(Model.PagerHtml()) 共 @Model.Total 条
            </div>

            <div class="hr hr-18 dotted hr-double"></div>
        </div>
    </div>

</div>


<script src="~/Static/layer/layer.js"></script>
<script type="text/javascript">

    $(function () {
        //初始化tooltip
        $(".open-event").tooltip({
            show: {
                effect: "slideDown",
                delay: 250
            }
        });

        //保持搜索条件
        $('#Awards').val('@userPar.Awards');

        $("#btn-add").on('click', function () {
            window.location.href = "/Awards/Add";
        });
        //删除
        $(".sign").on("click", function () {
            var id = $(this).attr("userno");
            if (id != undefined) {
                layer.confirm('您确认删除该奖品吗？', {
                    btn: ['确认', '取消'] //按钮
                }, function () {
                    var params = { id: id };
                    $.post("@Url.Action("DelAwards", "Awards")", params, function (data) {
                        if (data.status == 1) {
                            location.reload();
                            layer.msg(data.msg);
                        } else {
                            layer.msg(data.msg);
                        }
                    });
                }, function () {
                    layer.msg('您已经取消了操作');
                });
            } else {
                layer.msg('当前操作无效');
            }

        });

    });
</script>

